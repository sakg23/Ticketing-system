<%- include("./partials/header.ejs") %>

<header class="user-dashboard">
    <header class="main-header">
        <h1>Welcome, <%= userName %>!</h1>
        <nav>
                <ul>
                        <li><a href="/admin-view-all-tickets">View All Tickets</a></li>
                        <li><a href="/admin-view-all-users">View All Users</a></li>
                        <li><a href="/login">log in </a></li>
                        <li><a href="/logout">Logout</a></li>
                        <li><a href="/signup">Create account</a></li>
                </ul>
        </nav>
    </header>
<body>
    <header>
        <h1>All Users</h1>
        <p>Logged in as: <%= userName %></p>
    </header>
    <table border = "1">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td>
                        <!-- Actions like promote/demote users or delete users -->
                        <a href="/admin/delete-user/<%= user.user_id %>">Delete</a> |
                        <a href="/admin/update-role/<%= user.user_id %>?role=agent">Promote to Agent</a> |
                        <a href="/admin/update-role/<%= user.user_id %>?role=user">Demote to User</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
