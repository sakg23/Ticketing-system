<%- include("./partials/header.ejs") %>

<header class="user-dashboard">
    <header class="main-header">
        <h1>Welcome, <%= userName %>!</h1>
        <nav>
            <ul>
                <li><a href="/agent-area">Agents section</a></li>
                <li><a href="/view-all-tickets">View All Tickets</a></li>
                <li><a href="/view-all-users">View All Users</a></li>
                <li><a href="/logout">Logout</a></li>
                <li><a href="/agent-articles">Articles</a></li>

            </ul>
        </nav>
    </header>


<div class="container">
    <h1>Agent Area - Manage Categories</h1>

    <!-- Form to add new category -->
    <form action="/agent-area/add-category" method="POST">
        <label for="category_name">New Category:</label>
        <input type="text" id="category_name" name="category_name" required>
        <button type="submit">Add Category</button>
    </form>

    <h2>Current Categories:</h2>
    <ul>
        <% categories.forEach(function(category) { %>
            <li><%= category.category_name %></li>
        <% }) %>
    </ul>
</div>

