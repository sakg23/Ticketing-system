<section class="article-section">
    <h2>Create a New Article</h2>
    <form class="article-form" action="/agent-articles/create" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>

        <label for="content">Content:</label>
        <textarea id="content" name="content" rows="5" required></textarea>

        <button type="submit">Post Article</button>
    </form>
</section>

<section class="article-section">
    <h2>Articles</h2>
    <ul>
        <% articles.forEach(article => { %>
            <li>
                <h3><a href="/agent-article/<%= article.article_id %>"><%= article.title %></a></h3>
                <p><%= article.content.substring(0, 150) %>...</p>
                <p>Published by <strong><%= article.created_by %></strong> on <%= new Date(article.created_at).toDateString() %></p>
            </li>
        <% }) %>
    </ul>
</section>

<footer>
    <p>Logged in as: <%= userName %></p>
    <a href="/logout">Logout</a>
</footer>
